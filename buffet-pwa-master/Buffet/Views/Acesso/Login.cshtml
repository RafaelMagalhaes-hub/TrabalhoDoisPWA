@model Buffet.ViewModels.Acesso.AutenticarViewModels
@{ ViewData["Title"] = "Login"; }
<div class="text-center">
    <span class="display-4">Login</span><br /><br />

    <a asp-controller="Admin" asp-action="Supervisao">Logar</a>
    <br>
    <a asp-controller="Acesso" asp-action="RecuperarConta">Recuperar Conta</a>
    <br>
    <a asp-controller="Acesso" asp-action="Cadastrar">Cadastrar</a>
</div><br />
@if (Model.mensagem != null)
{
<p style="text-align:center;">@Model.mensagem</p>}
<center>
    <form method="post" action="/acesso/autenticar" style="margin-top:50px;margin-bottom:120px;background-color:rgb(217,251,221); text-align:left; border-style:solid; border-color:black; border-width:4px; padding:12px; width:500px;">
        <h4 style="text-align:center;">Insira seus dados de acesso:</h4><br>
        <div class="form-group">
            <label style="line-height:40px;height:40px;" for="email">E-mail:&nbsp;&nbsp;</label>
            <input style="width:300px; float:right; position:relative; right:0%;" type="email" class="form-control" name="email" id="email" placeholder="Insira aqui seu email">
        </div>
        <div class="form-group">
            <label style="line-height:40px; height:40px;" for="senha">Senha:&nbsp;&nbsp;</label>
            <input style="width:300px; float:right; position:relative; right:0%;" required type="password" class="form-control" name="senha" id="senha" placeholder="Insira aqui sua senha">
        </div>
        <div style="text-align:center;">
            <button name="idButton" value="1" type="submit" class="btn btn-primary">Enviar</button>
        </div>
    </form>
</center>